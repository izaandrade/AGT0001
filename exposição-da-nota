#include <stdio.h>
#include <stdlib.h>

int main (int argc, char *argv[]) {
    float nota;
    
    printf("Digite a nota (0-10): ");
    scanf("%f", &nota);
    
    while( nota < 0 || nota > 10){
    
    printf("E. inválida! Digite a nota (0-10): ");
    scanf("%f", &nota);
    }
    
    printf("Você digitou: %f\n", nota);
    
    return 0;
    
}
